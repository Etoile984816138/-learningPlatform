# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /static/                                staticDir:static
GET     /module/                                staticDir:app/views/module

# Catch all

GET     /direction                              DirectionAction.index
GET     /generic                                GenericAction.index
GET     /style                                  StyleAction.index
GET     /direction/{direction_id}               GenericAction.findByDirection
GET     /generic/{generic_id}                   StyleAction.findByGeneric
GET     /course/new                             CourseAction.getNew
GET     /course/hot                             CourseAction.getHot
GET     /course/recommendation                  CommendationAction.suitForMe
GET     /material/{material_id}                 MaterialAction.get
GET     /discuss/{information_id}/inform/{type} DiscussAction.getByInformation
GET     /discuss/{course_id}/course/{type}      DiscussAction.getByCourse
GET     /discuss/publish                        DiscussAction.publish
GET     /discuss/note                           DiscussAction.note
GET     /comment/add                            CommentAction.add
GET     /course/details                         CourseAction.details